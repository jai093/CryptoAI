{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.177.0/"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch index.ts"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2
    }
  }
}